<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="superleague_hibernate">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.company.domain.playerDecorator.DefinedPerson</class>

        <properties>
            <property name="javax.persistence.jdbc.driver"
                       value="org.postgresql.Driver" />

            <property name="javax.persistence.jdbc.url"
                      value="jdbc:postgresql://localhost/superlaegue_hibernate?allowMultiQueries=true" />

            <property name="javax.persistence.jdbc.user"
                      value="Roman" />

            <property name="javax.persistence.jdbc.password"
                      value="12345" />

            <property name="hibernate.dialect"
                      value="org.hibernate.dialect.PostgreSQL9Dialect"/>

            <property name="hibernate.show_sql"
                      value="true" />

            <property name="hibernate.hbm2ddl.auto"
                      value="create" />
        </properties>
    </persistence-unit>
</persistence>